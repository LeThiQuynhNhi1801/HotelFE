<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ProfileFragment">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tieude"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#673AB7"
            android:gravity="center"
            android:text="Thông tin cá nhân"
            android:textAlignment="center"
            android:textColor="#FBF9F9"
            android:textSize="26dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            app:cardCornerRadius="90dp">

            <ImageView
                android:id="@+id/imageAvata"
                android:layout_width="173dp"
                android:layout_height="173dp"
                android:layout_gravity="top"
                android:background="@drawable/rounded_corner"
                android:scaleType="fitXY"
                android:src="@drawable/avata" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/texUsername"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center"
            android:text="Lê Thị Quỳnh Nhi"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_password">

            </ImageView>

            <TextView
                android:id="@+id/textPassword"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#F4F1F1"
                android:text="***88*88*8"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#4C4949"
                android:textSize="20dp"
                app:icon="@drawable/ic_phone"
                app:iconSize="24dp"
                app:iconTint="#423D3D"
                app:rippleColor="#E91E63" />

            <Button
                android:id="@+id/buttonPassword"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F4F1F1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#4C4949"
                android:textSize="20dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconSize="24dp"
                app:iconTint="#070707"
                app:rippleColor="#E08FED" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_phone">

            </ImageView>

            <TextView
                android:id="@+id/textPhonenumber"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#F4F1F1"
                android:text="0397492326"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#4C4949"
                android:textSize="20dp"
                app:icon="@drawable/ic_phone"
                app:iconSize="24dp"
                app:iconTint="#423D3D"
                app:rippleColor="#E91E63" />

            <Button
                android:id="@+id/buttonPhonenumber"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F4F1F1"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#4C4949"
                android:textSize="20dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconSize="24dp"
                app:iconTint="#070707"
                app:rippleColor="#E08FED" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_mail">

            </ImageView>

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#F4F1F1"
                android:text="lethiquynhnhi@gmail.com"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#4C4949"
                android:textSize="20dp"
                app:icon="@drawable/ic_phone"
                app:iconSize="24dp"
                app:iconTint="#423D3D"
                app:rippleColor="#E91E63" />

            <Button
                android:id="@+id/buttonEmail"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F4F1F1"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#4C4949"
                android:textSize="20dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconSize="24dp"
                app:iconTint="#090909"
                app:rippleColor="#E08FED" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/cccd">

            </ImageView>

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#F4F1F1"
                android:text="0397492326"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#4C4949"
                android:textSize="20dp"
                app:icon="@drawable/ic_phone"
                app:iconSize="24dp"
                app:iconTint="#423D3D"
                app:rippleColor="#E91E63" />

            <Button
                android:id="@+id/buttonAddress"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F4F1F1"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#4C4949"
                android:textSize="20dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconSize="24dp"
                app:iconTint="#423D3D"
                app:rippleColor="#E91E63" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>