<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.history.HistoryFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F0F0"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="90dp">

            <ImageView
                android:id="@+id/avata"
                android:layout_width="173dp"
                android:layout_height="173dp"
                android:layout_gravity="top"
                android:background="@drawable/rounded_corner"
                android:scaleType="fitXY"
                android:src="@drawable/avata" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center"
            android:text="Lê Thị Quỳnh Nhi"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4F1F1"
            android:text="Thông tin cá nhân"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#4C4949"
            android:textSize="20dp"
            app:icon="@drawable/ic_account"
            app:iconSize="24dp"
            app:iconTint="#423D3D"
            app:rippleColor="#E08FED" />

        <Button
            android:id="@+id/bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4F1F1"
            android:text="Điểm thưởng"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#4C4949"
            android:textSize="20dp"
            app:icon="@drawable/ic_point"
            app:iconSize="24dp"
            app:iconTint="#423D3D"
            app:rippleColor="#E08FED" />

        <Button
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4F1F1"
            android:text="Ngôn ngữ"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#4C4949"
            android:textSize="20dp"
            app:icon="@drawable/ic_lang"
            app:iconSize="24dp"
            app:iconTint="#423D3D"
            app:rippleColor="#E08FED"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:text="Đăng xuất"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
